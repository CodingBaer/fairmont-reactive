html
  font-size 7px
  font-family sans-serif

a
  color: inherit
  text-decoration none
  &:visited
    color: inherit
    text-decoration none

p
  rhythm 0.7 3rem

h1, h2, h3, h4, h5, p, blockquote
  width 70rem

*:focus
  outline 0

body

  display flex
  flex-flow column wrap
  justify-content center

  padding 4rem

  div
    display flex
    flex-flow row wrap
    justify-content flex-start

    & > *
      padding-right 4rem

    p
      a[href='#increment']
        button()
        highlight #eee, #172

    p.counter
      rhythm 0.9 3rem
