html
  font-size 7px
  font-family sans-serif

a
  color: inherit
  text-decoration none
  &:visited
    color: inherit
    text-decoration none

p
  rhythm 0.7 3rem

h1, h2, h3, h4, h5, p, blockquote
  width 70rem

*:focus
  outline 0

body

  display flex
  flex-flow column wrap
  justify-content center

  padding 4rem

  div
    display flex
    flex-flow row wrap
    justify-content flex-start

    & > *
      padding-right 4rem

  div.main

    input[type='text']
      margin-top 2rem
      width 80rem
      padding 2rem
      border none
      border-bottom 1px solid silver
      rhythm 0.7 3rem

      &:focus
        border-bottom 1px solid gray

    ul
      margin-top 4rem
      flex: 0 0 100%

      & > li
        width 80rem
        rhythm 0.7 3rem
        display: block
        margin 0
        padding 1rem
        border 1px solid transparent

        &:hover
          background-color #eee
          border 1px solid silver
